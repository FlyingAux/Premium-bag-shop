<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/allproducts">All Products</a>
                <a class="block w-fit mb-2" href="/owners/admin">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <a class="text-red-500" href="">Delete all</a>


            <div class="flex items-start gap-5">
               <% product.forEach(function(products){ %>
                <div class="w-60">
                    <div class="w-full h-52 flex items-center justify-center bg-[<%= products.bgcolor %>]">
                        <img class="h-[12rem]" src="data:image/jpeg;base64,<%= products.image.toString('base64') %>"
                            alt="">
                    </div>
                    <div
                        class="flex justify-between bg-[<%= products.panelcolor %>] items-center px-4 py-4 text-[<%= products.textcolor %>]">
                        <div>
                            <h3>
                                <%= products.name %>
                            </h3>
                            <h4>â‚¹ <%= products.price %>
                            </h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/admin/<%= products._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
              <% }) %>
                
            </div>





        </div>
    </div>
    <%- include('./partials/footer') %>